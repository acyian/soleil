{# app/Resources/views/layout.html.twig #}
<!DOCTYPE html>
<html>
    
<head>
    
    <title>
        {% block title %}Avec le soleil{% endblock %}
    </title>
    
    {% block meta %} 
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <!--960 GRID et RESPONSIVE et AGENDA -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    {% endblock %}
    
    {% block stylesheets %} 
        <!--FEUILLE DE STYLE-->
	<link rel="stylesheet" type="text/css" href="{{ asset('site/style.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('site/style-safari.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('site/style-ie.css') }}" />
        <!--960 GRID et RESPONSIVE-->
        <link rel="stylesheet" href="{{ asset('site/css/grid.css') }}">
	<!--POLICES-->
	<link href='http://fonts.googleapis.com/css?family=Abel' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Roboto+Slab' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700' rel='stylesheet' type='text/css'>	
	<link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,900' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Nunito' rel='stylesheet' type='text/css'>
    {% endblock %}
        
        {% block javascript %}
        <!--POUR METTRE LE NOM DES ROUTE DANS LE JAVASCRIPTE -->
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
        
        <!--960 GRID et RESPONSIVE-->
        <script src="{{ asset('site/js/modernizr-2.6.2.min.js') }}"></script>
        
        
        
        <!--POUR LE MENU-->
	<script src="{{ asset('site/js/resize-menu.js') }}"></script>

	<!-- POUR METTRE DU CODE SPECIFIQUE A CHAQUE NAVIGATEUR-->
	<script type="text/javascript" src="{{ asset('site/js/code-navigateur.js') }}"></script>
    {% endblock %}

</head>

<body>
    <section id="principale" class="container_12">
        
        <header>
            
            <section class="container">
                
                <a href="http://www.soleil.com" title="Retour Ã  la page d'accueil de Avec le Soleil a.s.b.l">
			<h1>Avec le soleil</h1>
                        
		</a>
                
                <p id='langues'><a href='#' class="presente">FR</a> - <a href="#">EN</a></p>
                
                {{ render(controller("soleilSiteBundle:Site:menuChangerSite")) }}
            
            </section>


                   {{ render(controller("soleilSiteBundle:Site:menuSousSite")) }}
   
        
        </header>
    
        {% block content %}
        {% endblock %}
        
        <div class="clear"></div>
        
        {{ render(controller("soleilSiteBundle:Site:footer")) }}
        
    </section> <!-- FIN SECTION PRINCIPALE -->

        
</body>
</html>
